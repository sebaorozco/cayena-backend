<h1>Bienvenido a nuestro listado de Productos, {{this.user}}</this></h1>

<h1>Productos</h1>

<table id="main" role="grid" class="table__products">
  <tr class="table__header">
    <th>Product</th>
    <th>Description</th>
    <th><a href="{{sortLink}}">Price (order by price)</a></th>
    <th>Stock</th>
    <th>Code</th>
    <th>Category</th>
  </tr>
  {{#each payload}}
    <tr>
      <td>{{this.title}}</td>
      <td>{{this.description}}</td>
      <td>$ {{this.price}}</td>
      <td>{{this.stock}}</td>
      <td>{{this.code}}</td>
      <td>{{this.category}}</td>
      <td><button>Add Product</button></td>
    </tr>
  {{/each}}
</table>

