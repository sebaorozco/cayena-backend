<h1 class="prod__h1">Products by Category</h1>

<table id="prodByCategory" role="grid" class="table__products">
  <thead>
    <tr class="table__header">
      <th>Product</th>
      <th>Description</th>
      <th><a href="{{sortLink2}}">Price (Order by Price)</a></th>
      <th>Stock</th>
      <th>Code</th>
      <th>Category</th>
    </tr>
  </thead>
  <tbody>
    {{#each payload}}
      <tr>
        <td>{{title}}</td>
        <td>{{this.description}}</td>
        <td>$ {{this.price}}</td>
        <td>{{this.stock}}</td>
        <td>{{this.code}}</td>
        <td>{{this.category}}</td>
        <td><button>Add Product</button></td>
      </tr>
    {{/each}}
  </tbody>
</table>

